{
  "name": "twin.arco",
  "version": "0.0.1",
  "description": "Easily use Arco theme in tailwindcss & windicss",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm run build:arco && tsup src/index.ts --format cjs,esm --dts-resolve",
    "build:arco": "pnpx gulp arco",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "license": "MIT",
  "devDependencies": {
    "@arco-design/web-react": "^2.23.5",
    "@egoist/prettier-config": "^0.1.0",
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/gulp": "^4.0.9",
    "@types/gulp-less": "^0.0.32",
    "@types/jest": "^27.0.2",
    "esbuild-register": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-less": "^5.0.0",
    "gulp-postcss": "^9.0.1",
    "jest": "^27.3.1",
    "less": "^4.1.2",
    "postcss-js": "^3.0.3",
    "postcss-values-parser": "^6.0.1",
    "prettier": "^2.4.1",
    "through2": "^4.0.2",
    "tsup": "^5.5.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "vite-plugin-restart": "^0.0.2",
    "vite-plugin-windicss": "^1.5.1",
    "vitepress": "^0.20.1",
    "windicss": "^3.2.1"
  }
}
